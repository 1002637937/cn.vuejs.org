<%_
function getSponsorImage(s) {
  if (s.ad_img) {
    return s.ad_img
  }
  if (s.alt_img) {
    return Math.random() >= 0.5 ? s.img : s.alt_img
  }
  return s.img
}
_%>
<div id="sidebar-sponsors-special">
  <div class="main-sponsor">
    <%_ if (theme.platinum_sponsors_china.length) { _%>
    <span>特别赞助商</span>
    <%_ for (const sponsor of theme.platinum_sponsors_china) { _%>
    <div>
    <a href="<%- sponsor.url %>" target="_blank" rel="sponsored noopener" class="logo">
      <img src="<%- url_for(`/images/${getSponsorImage(sponsor)}`) %>" alt="<%-sponsor.name-%>">
    </a>
    </div>
    <%_ } _%>
    <%_ } else { _%>
    <a class="become-backer" href="/support-vuejs/#special-sponsor-china">
      特别赞助商广告位
      <br>
      点击了解详情
    </a>
    <%_ } _%>
  </div>
</div>
